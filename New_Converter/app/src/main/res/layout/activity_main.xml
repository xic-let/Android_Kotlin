<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AADFDA"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Currency Converter"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="55dp" />

    <EditText
        android:id="@+id/edit_valor_euros"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="20dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Insert amount in â‚¬ "
        android:inputType="numberDecimal"
        android:singleLine="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textStyle="italic"
        tools:layout_editor_absoluteX="49dp"
        tools:layout_editor_absoluteY="225dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#AADFDA"
        android:gravity="center"
        android:orientation="horizontal"
        tools:context=".MainActivity">

        <Button
            android:id="@+id/button_real"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Real"
            android:textColorHighlight="#009688"
            android:textColorLink="#25635D"
            app:rippleColor="#3B457E"
            tools:layout_editor_absoluteX="123dp"
            tools:layout_editor_absoluteY="378dp" />

        <Button
            android:id="@+id/button_dolar"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dolar"
            android:textColorHighlight="#009688"
            android:textColorLink="#25635D"
            app:rippleColor="#3B457E"
            tools:layout_editor_absoluteX="123dp"
            tools:layout_editor_absoluteY="378dp" />

        <Button
            android:id="@+id/button_peso"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Peso"
            android:textColorHighlight="#009688"
            android:textColorLink="#25635D"
            app:rippleColor="#3B457E"
            tools:layout_editor_absoluteX="123dp"
            tools:layout_editor_absoluteY="378dp" />

    </LinearLayout>



        <TextView
            android:id="@+id/text_valor_dolares"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Desenvolvido por Patricia Cunha!"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="30sp"
            tools:layout_editor_absoluteX="38dp"
            tools:layout_editor_absoluteY="541dp" />


    </LinearLayout>